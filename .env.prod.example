# Copy this to the production server as .env.prod and fill real secrets/hosts

COMPOSE_PROJECT_NAME=traccar-prod

# Domains
TRAEFIK_DASHBOARD_HOST=ingress.socratec.gmbh
TRACCAR_HOST=smc.socratec.gmbh
PGADMIN_HOST=pgadmin.socratec.gmbh

# ACME / Let's Encrypt
ACME_EMAIL=ops@socratec.gmbh
ACME_RESOLVER=myresolver
ACME_STORAGE=/etc/traefik/acme.json

# Images (master branch build)
TRACCAR_IMAGE=ghcr.io/socratec-telematic-gmbh/traccar-docker:latest
FORWARDER_IMAGE=ghcr.io/socratec-telematic-gmbh/traccar-forwarder:latest

# MariaDB (production)
MARIADB_ROOT_PASSWORD=replace_prod_root
MARIADB_DATABASE=traccar
MARIADB_USER=traccar
MARIADB_PASSWORD=replace_prod_user

# Forwarder
ASPNETCORE_ENVIRONMENT=Production

# Traefik dashboard basic auth (user:hashedpassword)
# Generate with: htpasswd -nbB user 'StrongPassword' | sed -e s/\$/\$\$/g
TRAEFIK_DASHBOARD_USERS=user:$$2y$$12$$REPLACE_BCRYPT_HASH